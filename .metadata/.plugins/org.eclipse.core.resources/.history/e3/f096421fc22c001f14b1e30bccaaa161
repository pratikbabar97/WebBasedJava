package com.reserve.entities;

import java.time.LocalDate;

import javax.persistence.Entity;
import javax.persistence.Table;

import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;
import lombok.ToString;

@Entity

@Getter
@Setter
@Table(name="reservations")
@ToString(callSuper = true)
public class Reservations extends BaseEntity {
	private Integer roomNumber;
	private RoomType room;
	private Double price;
	private Boolean availability;
	public Reservations(LocalDate checkInDate, LocalDate checkOutDate, Integer roomNumber, RoomType room,
			Double price, Boolean availability) {
		super( checkInDate, checkOutDate);
		this.roomNumber = roomNumber;
		this.room = room;
		this.price = price;
		this.availability = availability;
	}
	
	
	
		
		// TODO Auto-generated constructor stub
	

	

}
